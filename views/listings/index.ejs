<% layout('layouts/boilerplate') %>
<br>
<h2>All Listings</h2>
<br>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(list of allListings) { %>
    <a href="/listings/<%= list._id %>" class="list-link">
      <div class="card listing-card">
        <img
          src="<%= list.image %>"
          class="card-img-top"
          alt="Listing_Image"
          style="height: 20rem"
        />
        <div class="card-img-overlay">abcd</div>
        <div class="card-body">
          <p class="card-text">
            <b><%= list.title %></b>
            <br />
            &#8377; <%= list.price %> / Night
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>